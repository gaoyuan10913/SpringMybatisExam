<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hand.dto.Customer">

	<insert id="addCustomer" parameterType="com.hand.dto.Customer"
		flushCache="true">
		insert into customer
		(store_id,first_name,last_name,email,address_id,create_date) values
		(#{store_id},#{first_name},#{last_name},#{email},#{address_id,#{create_date}})
	</insert>

	<select id="selectByFirstName" parameterType="String" resultType="com.hand.dto.Customer">
		select first_name,last_name,email,address,create_date
		from customer where first_name=#{first_name}
	</select>
</mapper>  